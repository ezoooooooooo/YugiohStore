@model User

<h2>Register New Account</h2>

<form method="post" asp-action="Register">
    <div>
        <label for="username">Username:</label>
        <input asp-for="Username" name="Username" id="username" required />
        @if (ViewBag.UsernameError != null)
        {
            <div class="error">@ViewBag.UsernameError</div>
        }
    </div>

    <div>
        <label for="password">Password:</label>
        <input asp-for="Password" name="Password" id="password" type="password" required />
        @if (ViewBag.PasswordError != null)
        {
            <div class="error">@ViewBag.PasswordError</div>
        }
    </div>

    <div>
        @if (Context.Session.GetString("Role") == "Admin")
        {
            <label for="role">Role:</label>
            <select asp-for="Role" id="role">
                <option value="User">User</option>
                <option value="Admin">Admin</option>
            </select>
        }
    </div>

    <button type="submit">Register</button>
</form>
